{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["categories", "componentClasses", "components"],
  "properties": {
    "categories": {
      "type": "object",
      "properties": {
        "auth": {
          "type": "object",
          "properties": {
            "authMethodOrder": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["display", "type"],
                  "properties": {
                    "display": {
                      "type": "string",
                      "enum": ["BUTTON", "INPUT"]
                    },
                    "type": {
                      "type": "string",
                      "enum": ["FEDERATED", "USERNAME_PASSWORD"]
                    }
                  }
                }
              }
            },
            "federation": {
              "type": "object",
              "properties": {
                "interfaceStyle": {
                  "type": "string",
                  "enum": ["BUTTON_LIST"]
                },
                "order": {
                  "type": "array",
                  "items": {}
                }
              }
            }
          }
        },
        "form": {
          "type": "object",
          "properties": {
            "displayGraphics": { "type": "boolean" },
            "instructions": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            },
            "languageSelector": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            },
            "location": {
              "type": "object",
              "properties": {
                "horizontal": {
                  "type": "string",
                  "enum": ["CENTER", "LEFT", "RIGHT"]
                },
                "vertical": {
                  "type": "string",
                  "enum": ["CENTER", "TOP", "BOTTOM"]
                }
              }
            },
            "sessionTimerDisplay": {
              "type": "string",
              "enum": ["NONE", "VISIBLE"]
            }
          }
        },
        "global": {
          "type": "object",
          "properties": {
            "colorSchemeMode": {
              "type": "string",
              "enum": ["LIGHT", "DARK", "AUTO"]
            },
            "pageFooter": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            },
            "pageHeader": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            },
            "spacingDensity": {
              "type": "string",
              "enum": ["REGULAR", "COMPACT", "SPACIOUS"]
            }
          }
        },
        "signUp": {
          "type": "object",
          "properties": {
            "acceptanceElements": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "enforcement": {
                    "type": "string",
                    "enum": ["NONE", "REQUIRED", "OPTIONAL"]
                  },
                  "textKey": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "componentClasses": {
      "type": "object",
      "properties": {
        "buttons": {
          "type": "object",
          "properties": {
            "borderRadius": { "type": "number" }
          }
        },
        "divider": {
          "$ref": "#/definitions/colorModeStyles"
        },
        "dropDown": {
          "type": "object",
          "properties": {
            "borderRadius": { "type": "number" },
            "darkMode": { "$ref": "#/definitions/dropDownMode" },
            "lightMode": { "$ref": "#/definitions/dropDownMode" }
          }
        },
        "focusState": {
          "$ref": "#/definitions/colorModeStyles"
        },
        "idpButtons": {
          "type": "object",
          "properties": {
            "icons": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            }
          }
        },
        "input": {
          "type": "object",
          "properties": {
            "borderRadius": { "type": "number" },
            "darkMode": { "$ref": "#/definitions/inputMode" },
            "lightMode": { "$ref": "#/definitions/inputMode" }
          }
        },
        "inputDescription": {
          "$ref": "#/definitions/textColorMode"
        },
        "inputLabel": {
          "$ref": "#/definitions/textColorMode"
        },
        "link": {
          "type": "object",
          "properties": {
            "darkMode": { "$ref": "#/definitions/linkMode" },
            "lightMode": { "$ref": "#/definitions/linkMode" }
          }
        },
        "optionControls": {
          "type": "object",
          "properties": {
            "darkMode": { "$ref": "#/definitions/optionMode" },
            "lightMode": { "$ref": "#/definitions/optionMode" }
          }
        },
        "statusIndicator": {
          "type": "object",
          "properties": {
            "darkMode": { "$ref": "#/definitions/statusMode" },
            "lightMode": { "$ref": "#/definitions/statusMode" }
          }
        }
      }
    },
    "components": {
      "type": "object",
      "properties": {
        "alert": {
          "type": "object",
          "properties": {
            "borderRadius": { "type": "number" },
            "darkMode": {
              "type": "object",
              "properties": {
                "error": { "$ref": "#/definitions/bgBorderColor" }
              }
            },
            "lightMode": {
              "type": "object",
              "properties": {
                "error": { "$ref": "#/definitions/bgBorderColor" }
              }
            }
          }
        },
        "favicon": {
          "type": "object",
          "properties": {
            "enabledTypes": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["ICO", "SVG", "PNG"]
              }
            }
          }
        },
        "form": {
          "type": "object",
          "properties": {
            "backgroundImage": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            },
            "borderRadius": { "type": "number" },
            "darkMode": { "$ref": "#/definitions/bgBorderColor" },
            "lightMode": { "$ref": "#/definitions/bgBorderColor" },
            "logo": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "formInclusion": {
                  "type": "string",
                  "enum": ["IN", "OUT"]
                },
                "location": {
                  "type": "string",
                  "enum": ["CENTER", "START", "END"]
                },
                "position": {
                  "type": "string",
                  "enum": ["TOP", "BOTTOM"]
                }
              }
            }
          }
        },
        "idpButton": {
          "type": "object",
          "properties": {
            "custom": { "type": "object" },
            "standard": {
              "type": "object",
              "properties": {
                "darkMode": { "$ref": "#/definitions/buttonStates" },
                "lightMode": { "$ref": "#/definitions/buttonStates" }
              }
            }
          }
        },
        "pageBackground": {
          "type": "object",
          "properties": {
            "darkMode": {
              "type": "object",
              "properties": {
                "color": { "$ref": "#/definitions/colorHex" }
              }
            },
            "image": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            },
            "lightMode": {
              "type": "object",
              "properties": {
                "color": { "$ref": "#/definitions/colorHex" }
              }
            }
          }
        },
        "pageFooter": { "$ref": "#/definitions/pageSection" },
        "pageHeader": { "$ref": "#/definitions/pageSection" },
        "pageText": {
          "type": "object",
          "properties": {
            "darkMode": { "$ref": "#/definitions/textColors" },
            "lightMode": { "$ref": "#/definitions/textColors" }
          }
        },
        "phoneNumberSelector": {
          "type": "object",
          "properties": {
            "displayType": {
              "type": "string",
              "enum": ["TEXT", "DROPDOWN"]
            }
          }
        },
        "primaryButton": {
          "type": "object",
          "properties": {
            "darkMode": { "$ref": "#/definitions/primaryButtonStates" },
            "lightMode": { "$ref": "#/definitions/primaryButtonStates" }
          }
        },
        "secondaryButton": {
          "type": "object",
          "properties": {
            "darkMode": { "$ref": "#/definitions/buttonStates" },
            "lightMode": { "$ref": "#/definitions/buttonStates" }
          }
        }
      }
    }
  },
  "definitions": {
    "colorHex": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}ff$"
    },
    "bgBorderColor": {
      "type": "object",
      "properties": {
        "backgroundColor": { "$ref": "#/definitions/colorHex" },
        "borderColor": { "$ref": "#/definitions/colorHex" }
      }
    },
    "colorModeStyles": {
      "type": "object",
      "properties": {
        "darkMode": {
          "type": "object",
          "properties": {
            "borderColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "lightMode": {
          "type": "object",
          "properties": {
            "borderColor": { "$ref": "#/definitions/colorHex" }
          }
        }
      }
    },
    "dropDownMode": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "itemBackgroundColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "hover": {
          "type": "object",
          "properties": {
            "itemBackgroundColor": { "$ref": "#/definitions/colorHex" },
            "itemBorderColor": { "$ref": "#/definitions/colorHex" },
            "itemTextColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "match": {
          "type": "object",
          "properties": {
            "itemBackgroundColor": { "$ref": "#/definitions/colorHex" },
            "itemTextColor": { "$ref": "#/definitions/colorHex" }
          }
        }
      }
    },
    "inputMode": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "borderColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "placeholderColor": { "$ref": "#/definitions/colorHex" }
      }
    },
    "textColorMode": {
      "type": "object",
      "properties": {
        "darkMode": {
          "type": "object",
          "properties": {
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "lightMode": {
          "type": "object",
          "properties": {
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        }
      }
    },
    "linkMode": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "hover": {
          "type": "object",
          "properties": {
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        }
      }
    },
    "optionMode": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "borderColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "selected": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "foregroundColor": { "$ref": "#/definitions/colorHex" }
          }
        }
      }
    },
    "statusMode": {
      "type": "object",
      "properties": {
        "error": { "$ref": "#/definitions/statusItem" },
        "pending": {
          "type": "object",
          "properties": {
            "indicatorColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "success": { "$ref": "#/definitions/statusItem" },
        "warning": { "$ref": "#/definitions/statusItem" }
      }
    },
    "statusItem": {
      "type": "object",
      "properties": {
        "backgroundColor": { "$ref": "#/definitions/colorHex" },
        "borderColor": { "$ref": "#/definitions/colorHex" },
        "indicatorColor": { "$ref": "#/definitions/colorHex" }
      }
    },
    "buttonStates": {
      "type": "object",
      "properties": {
        "active": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "borderColor": { "$ref": "#/definitions/colorHex" },
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "defaults": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "borderColor": { "$ref": "#/definitions/colorHex" },
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "hover": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "borderColor": { "$ref": "#/definitions/colorHex" },
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        }
      }
    },
    "primaryButtonStates": {
      "type": "object",
      "properties": {
        "active": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "defaults": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "disabled": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "borderColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "hover": {
          "type": "object",
          "properties": {
            "backgroundColor": { "$ref": "#/definitions/colorHex" },
            "textColor": { "$ref": "#/definitions/colorHex" }
          }
        }
      }
    },
    "pageSection": {
      "type": "object",
      "properties": {
        "backgroundImage": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" }
          }
        },
        "darkMode": {
          "type": "object",
          "properties": {
            "background": {
              "type": "object",
              "properties": {
                "color": { "$ref": "#/definitions/colorHex" }
              }
            },
            "borderColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "lightMode": {
          "type": "object",
          "properties": {
            "background": {
              "type": "object",
              "properties": {
                "color": { "$ref": "#/definitions/colorHex" }
              }
            },
            "borderColor": { "$ref": "#/definitions/colorHex" }
          }
        },
        "logo": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "location": {
              "type": "string",
              "enum": ["START", "CENTER", "END"]
            }
          }
        }
      }
    },
    "textColors": {
      "type": "object",
      "properties": {
        "bodyColor": { "$ref": "#/definitions/colorHex" },
        "descriptionColor": { "$ref": "#/definitions/colorHex" },
        "headingColor": { "$ref": "#/definitions/colorHex" }
      }
    }
  }
}